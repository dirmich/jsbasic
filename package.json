{
  "name": "jsbasic",
  "version": "0.1.0",
  "description": "6502 CPU and BASIC interpreter emulator in TypeScript",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --minify",
    "build:dev": "bun build src/index.ts --outdir dist --sourcemap",
    "build:web": "NODE_ENV=production bun run build.js",
    "build:web:dev": "NODE_ENV=development bun run build.js",
    "build:analyze": "NODE_ENV=production ANALYZE=true bun run build.js",
    "serve:web": "bun run build:web && cd dist && python3 -m http.server 8080",
    "serve:local": "bun run build:web:dev && cd dist && python3 -m http.server 8080",
    "deploy:prepare": "bun run clean && bun run test && bun run build:web",
    "deploy:analyze": "bun run build:analyze",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bun run tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "bun run dist/index.js",
    "serve": "bun run --hot src/index.ts",
    "preview": "bun run build:web:dev && cd dist && python3 -m http.server 3000"
  },
  "keywords": [
    "6502",
    "cpu",
    "emulator",
    "basic",
    "interpreter",
    "typescript",
    "retro-computing"
  ],
  "author": "David, Shin",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
